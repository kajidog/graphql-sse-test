type User {
  id: ID!
  nickname: String!
}

type Message {
  id: ID!
  user: User!
  content: String!
  createdAt: String!
}

type Query {
  messages: [Message!]!
  me: User
}

type Mutation {
  login(nickname: String!): User!
  sendMessage(content: String!): Message!
}

type Subscription {
  messageAdded: Message!
}
